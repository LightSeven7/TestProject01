# エイリアス

alias ll='ls -lF --color=auto'
alias la='ls -lahF --color=auto'
alias laa='ls -aF --color=auto'     # ファイル名のみを羅列
alias lt='ls -lathF --color=auto'   # ファイルの更新昇順
alias ltr='ls -latrhF --color=auto' # ファイルの更新降順
alias lr='ls -larhF --color=auto'   # ファイル名の降順
alias lss='ls -laShF --color=auto'  # ファイルのサイズ大きい順
alias lsr='ls -laSrhF --color=auto' # ファイルのサイズ小さい順
alias l1='ls -1aF --color=auto'     # ファイル名のみをリスト表示
alias lrr='ls -aFR --color=auto'    # ディレクトリ内容を再帰的に表示
alias lx='ls -lahXF --color=auto'   # ファイルを拡張子毎にまとめて表示

alias grep='grep --color'
alias df='df -h'
alias vi='vim'
alias view='vim -R '
alias rm='rm -i'
alias cls='clear'
alias tm='./tm_Ses.sh'
alias tma='./tma_Ses.sh'
alias tls='tmux ls'

