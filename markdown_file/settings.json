{
    "editor.fontSize": 12,
    "editor.fontFamily": "\"Source Han Code JP\", 游ゴシック, Inconsolata",
    "editor.cursorWidth": 3,
    "editor.quickSuggestionsDelay": 5,
    "editor.suggest.maxVisibleSuggestions": 15,
    "editor.mouseWheelZoom": true,
    "editor.renderControlCharacters": true,
    "editor.minimap.enabled":false,

    // "editor.insertSpaces": true,
    // #タブを入力した際、タブをそのまま入力するようにします。
    "[html]": {
        "editor.insertSpaces": false
    },

    // #半角空白を全て表示します。
    // "all" : 表示
    // "none" : 非表示
    // "boundary" : 単語間の単一スペースのみ非表示、以外はすべて表示
    "editor.renderWhitespace": "all",

    // #現在のカーソル行の表示を行番号表示のみへ変更します。
    // 'none' : 表示しない
    // 'gutter' : 行番号エリアのみ表示
    // 'line' : エディタ内のカーソール行のみ表示
    // 'all' : 全てカーソール行で強調表示
    "editor.renderLineHighlight": "gutter",

    "editor.roundedSelection": false,
    "editor.autoIndent": "full",
    "editor.find.autoFindInSelection": "multiline",
    "editor.renderIndentGuides": true,
    "editor.occurrencesHighlight": false,
    "editor.suggestSelection": "first",
    "editor.wordBasedSuggestions": false,
    "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?、。「」（）；：・？＜＞＋－＊／｛｝｜～＆％＄＃”！’　にをはがのとも",
    "explorer.openEditors.visible": 50,
    "explorer.autoReveal": false,
    "window.zoomLevel": 0,
    "window.titleBarStyle": "custom",
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    "breadcrumbs.enabled": true,
    "workbench.list.openMode": "doubleClick",
    "workbench.editor.closeEmptyGroups": true,
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorTheme": "Night Owl Black",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.enablePreview": false,
    "workbench.editor.enablePreviewFromQuickOpen": false,
    "workbench.colorCustomizations": {

        // #カーソルの色
        "editorCursor.foreground": "#00ffc8",

        // #カーソル行の設定
        "editor.lineHighlightBorder": "#00ffc8d7",
        "editor.lineHighlightBackground": "#00c3ff3a",
        // "editor.lineHighlightBackground": "#c1d12e46",

        // #空白の色
        "editorWhitespace.foreground": "#00ffffd8",

        // #選択状態の範囲内設定
        "editor.selectionHighlightBorder": "#cbdf17",
        "editor.selectionHighlightBackground": "#114a6b",
        "editor.selectionBackground": "#00ffff54",
        // "editor.selectionBackground": "#0051ff",
        // "editor.selectionBackground": "#0b48f1ad",

        // #検索結果設定
        "editor.findMatchBorder": "#f50b1e",
        "editor.findMatchBackground": "#0463a1e1",
        "editor.findMatchHighlightBackground": "#02d5fa7a",
        "editor.findMatchHighlightBorder": "#35fa04",

        // #エディタ外観設定
        "editorGroup.border": "#ff0000",
        "editorGroupHeader.tabsBackground": "#1f2946",
        "editorIndentGuide.background": "#00d9ff",
        "editorLineNumber.foreground": "#1990fffd",
        "editorLineNumber.activeForeground": "#19f7ff",

        // #スクロールバー設定
        "scrollbarSlider.background": "#19f7ff69",
        "scrollbarSlider.hoverBackground": "#19f7ffb9",

        // #タブ外観設定
        "tab.border": "#ffffff",
        "tab.activeBorder": "#fffb19",
        "tab.activeForeground": "#fffb19",
        //"tab.activeBackground": "#0767d4",
        "tab.inactiveForeground": "#ffffff",
        //"tab.inactiveBackground": "#03256e",

        // #ステータスバー外観設定
        "statusBar.border": "#00d9ff",
        "statusBar.debuggingBackground": "#ff0000",

        // #Diff設定
        "diffEditor.insertedTextBackground": "#04f59933",
        "diffEditor.insertedTextBorder": "#00ffc8",
        "diffEditor.removedTextBackground": "#ff005549",
        "diffEditor.removedTextBorder": "#ff0055d8",
    },
    "editor.tokenColorCustomizations": {
        // #コメント行設定
        "comments": "#00d41c",
    },
    // #［エクスプローラー］ビューに表示しないフォルダとファイルを指定
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    // #ファイル監視から除外するファイル
    "files.watcherExclude": {
        //"**/img/**": true,
    },
    // #検索でファイルとフォルダーを除外するために glob パターンを構成
    // #files.exclude 設定からすべての glob パターンを継承
    "search.exclude": {
    },

    // #検索設定
    "search.useIgnoreFiles": false,
    "search.useGlobalIgnoreFiles": false,
    "search.useReplacePreview": true,

    // #ターミナル設定
    "terminal.integrated.copyOnSelection": true,
