    "highlight.maxMatches": 5000,
    "dateTime.padDays": true,
    "dateTime.showMonth": true,
    "dateTime.showDayOfMonth": true,
    "dateTime.showDayOfWeek": true,
    "dateTime.showSeconds": true,
    "dateTime.monthsBefore": 1,
    "dateTime.monthsAfter": 8,
    "dateTime.customFormat": "MM/DD HH:mm:ss dddd",
    "editor.snippetSuggestions": "inline",
    // "python.languageServer": "Default",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "security.workspace.trust.untrustedFiles": "open",
    "git.ignoreLegacyWarning": true,
    "gitlens.advanced.messages": {
        "suppressGitVersionWarning": true
    },
    "hediet.vscode-drawio.codeLinkActivated": false,
    "liveServer.settings.https": {
        "enable": true,
        "cert": "C:\\cert\\localhost+2.pem",
        "key": "C:\\cert\\localhost+2-key.pem",
        "passphrase": ""
    },
    "liveServer.settings.donotVerifyTags": true,
    "liveServer.settings.donotShowInfoMsg": true,
    "bracket-pair-colorizer-2.depreciation-notice": false,
    "python.linting.enabled": false,
    "tabnine.experimentalAutoImports": true,
    "code-runner.runInTerminal": true,
    "explorer.confirmDelete": false

}
