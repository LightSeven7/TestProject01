    // #VSNotes設定(拡張機能)
    "vsnotes.defaultNotePath": "d:\\Local_Development\\VSNotes",
    "vsnotes.defaultNoteTitle": "{title}_{day}.{ext}",
    "vsnotes.tokens": [
        {
            "type": "datetime",
            "token": "{dt}",
