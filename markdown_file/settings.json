    // #Prettier設定(拡張機能)
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },

    // #Shortcuts の設定(拡張機能)
    "shortcuts.buttons": [
        // "file-binary , workbench.action.tasks.build , Run build task",
        // "beaker , workbench.action.tasks.test , Run test task",
        "telescope , workbench.action.showCommands , Command Palette",
        "terminal , workbench.action.terminal.toggleTerminal , Terminal",
        "bug, workbench.action.debug.start, Debug",
        "bookmark, bookmarks.toggle, Toggle Bookmark",
        "arrow-left, bookmarks.jumpToPrevious, Bookmark Jump To Previous",
        "arrow-right, bookmarks.jumpToNext, Bookmark Jump To Next",
        "file, workbench.action.files.save, Save",
    ],

    // #HighLight の設定(拡張機能)
    "highlight.decorations": {
        "rangeBehavior": 3
    },
    "highlight.regexFlags": "gi",
